{
  "name": "better-mua-ui",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "show secure indicator",
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/mail/u/0/*",
        "https://outlook.office.com/*"
      ],
      "js": [
        "js/main.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["img/*"],
  "permissions": [
    "http://localhost/*"
  ]
}
